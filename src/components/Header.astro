---
// Header component for Chaud & Glace
---

<header
    class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-lg shadow-sm border-b border-chaud-100"
>
    <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo and Brand -->
            <div class="flex items-center gap-4">
                <img
                    src="/logo-Chaud.png"
                    alt="Chaud & Glace Logo"
                    class="h-14 w-14 object-contain"
                />
                <div class="flex flex-col">
                    <span class="text-xl font-bold text-warm-900 leading-tight">
                        Chaud &amp; Glace
                    </span>
                    <span class="text-sm text-chaud-600 font-medium">
                        Dulce Vida
                    </span>
                </div>
            </div>

            <!-- Desktop Navigation -->
            <ul class="hidden md:flex items-center gap-8">
                <li>
                    <a
                        href="#inicio"
                        class="text-warm-700 hover:text-chaud-600 transition-colors font-medium text-sm uppercase tracking-wide"
                    >
                        Inicio
                    </a>
                </li>
                <li>
                    <a
                        href="#sobre-nosotros"
                        class="text-warm-700 hover:text-chaud-600 transition-colors font-medium text-sm uppercase tracking-wide"
                    >
                        Nosotros
                    </a>
                </li>
                <li>
                    <a
                        href="#menu"
                        class="text-warm-700 hover:text-chaud-600 transition-colors font-medium text-sm uppercase tracking-wide"
                    >
                        Menú
                    </a>
                </li>
                <li>
                    <a
                        href="#contacto"
                        class="text-warm-700 hover:text-chaud-600 transition-colors font-medium text-sm uppercase tracking-wide"
                    >
                        Contacto
                    </a>
                </li>
            </ul>

            <!-- Call Button -->
            <a
                href="tel:2454522978"
                class="hidden md:flex items-center gap-2 bg-chaud-600 hover:bg-chaud-700 text-white px-6 py-3 rounded-full font-semibold shadow-md hover:shadow-lg transition-all duration-300"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                </svg>
                Llámanos
            </a>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-button"
                class="md:hidden text-warm-700 hover:text-chaud-600 transition-colors p-2"
                aria-label="Toggle menu"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div
            id="mobile-menu"
            class="hidden md:hidden mt-4 pb-4 border-t border-chaud-100 pt-4"
        >
            <ul class="flex flex-col gap-4">
                <li>
                    <a
                        href="#inicio"
                        class="block text-warm-700 hover:text-chaud-600 transition-colors font-medium py-2"
                    >
                        Inicio
                    </a>
                </li>
                <li>
                    <a
                        href="#sobre-nosotros"
                        class="block text-warm-700 hover:text-chaud-600 transition-colors font-medium py-2"
                    >
                        Sobre Nosotros
                    </a>
                </li>
                <li>
                    <a
                        href="#menu"
                        class="block text-warm-700 hover:text-chaud-600 transition-colors font-medium py-2"
                    >
                        Menú
                    </a>
                </li>
                <li>
                    <a
                        href="#contacto"
                        class="block text-warm-700 hover:text-chaud-600 transition-colors font-medium py-2"
                    >
                        Contacto
                    </a>
                </li>
                <li>
                    <a
                        href="tel:2454522978"
                        class="flex items-center justify-center gap-2 bg-chaud-600 hover:bg-chaud-700 text-white px-6 py-3 rounded-full font-semibold shadow-md transition-all duration-300"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        Llámanos
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", (e) => {
            e.preventDefault();
            const href = anchor.getAttribute("href");
            const target = href ? document.querySelector(href) : null;
            if (target) {
                target.scrollIntoView({
                    behavior: "smooth",
                    block: "start",
                });
                // Close mobile menu after clicking
                mobileMenu?.classList.add("hidden");
            }
        });
    });
</script>
