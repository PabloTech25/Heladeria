---
interface Product {
  name: string;
  description: string;
  ingredients?: string;
  size?: string;
  price: string;
  image: string;
}

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

<section id="menu" class="py-24 bg-gradient-to-b from-white to-chaud-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-chaud-100 text-chaud-700 rounded-full text-sm font-semibold mb-4">
        Nuestras Especialidades
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-warm-900 mb-4">
        Menú Artesanal
      </h2>
      <p class="text-warm-600 text-lg max-w-2xl mx-auto leading-relaxed">
        Cada producto es elaborado al momento con ingredientes frescos y de la más alta calidad
      </p>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product) => (
        <div class="bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 group border border-chaud-100">
          <!-- Product Image -->
          <div class="relative overflow-hidden h-64 bg-gradient-to-br from-chaud-50 to-chaud-100">
            <img 
              src={product.image} 
              alt={product.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
            />
            <!-- Price Badge -->
            <div class="absolute top-4 right-4 bg-chaud-600 text-white px-5 py-2.5 rounded-full font-bold shadow-xl backdrop-blur-sm">
              {product.price}
            </div>
          </div>
          
          <!-- Product Info -->
          <div class="p-6">
            <h3 class="text-2xl font-bold text-warm-900 mb-3 leading-tight">
              {product.name}
            </h3>
            
            <p class="text-warm-600 mb-4 leading-relaxed">
              {product.description}
            </p>
            
            {product.ingredients && (
              <div class="mb-3 p-3 bg-chaud-50 rounded-lg">
                <span class="text-sm font-bold text-chaud-700 block mb-1">
                  Ingredientes:
                </span>
                <p class="text-sm text-warm-700 leading-relaxed">
                  {product.ingredients}
                </p>
              </div>
            )}
            
            {product.size && (
              <div class="mb-4">
                <span class="inline-flex items-center gap-2 text-sm font-semibold text-chaud-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                  </svg>
                  {product.size}
                </span>
              </div>
            )}
            
            <button class="w-full mt-4 bg-chaud-600 hover:bg-chaud-700 text-white py-3.5 rounded-xl font-bold shadow-md hover:shadow-lg transition-all duration-300 flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
              Ordenar Ahora
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
